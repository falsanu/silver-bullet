{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": false,
    "declaration": true,
    "lib": [
      "es2017",
    ],
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "newLine": "LF",
    "moduleResolution": "node",
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
